<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>mpd</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Start</servlet-name>
    <servlet-class>karabelas.servlet.Start</servlet-class>
    <init-param>
      <param-name>dbconfigfile</param-name>
      <param-value>WEB-INF\classes\dbconfig.properties</param-value>
    </init-param>
    <init-param>
      <param-name>log4j-properties-location</param-name>
      <param-value>WEB-INF\classes\log4j.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <session-config>
    <session-timeout>0</session-timeout>
  </session-config>
  <listener>
    <listener-class>karabelas.servlet.RequestLogger</listener-class>
  </listener>
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/WEB-INF/error/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/error/error404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/error/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/error/ErrorBadRequest.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/error/ErrorAccessDenied.jsp</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/WEB-INF/error/error.jsp</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>TrafficParkingInfraction</display-name>
    <servlet-name>TrafficParkingInfraction</servlet-name>
    <servlet-class>karabelas.servlet.TrafficParkingInfraction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TrafficParkingInfraction</servlet-name>
    <url-pattern>/listinfractions.jsp</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <description>
    	controller for login (login.jsp) and logout. forwards to
    	patrolentry.jsp if user provides username/password
    	checked against DB    
    </description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LookOutServletController</servlet-name>
    <servlet-class>karabelas.servlet.LookOutServletController</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LookOutServletController</servlet-name>
    <url-pattern>/jsp/login</url-pattern>
    <url-pattern>/jsp/logout</url-pattern>
    <url-pattern>/jsp/signin</url-pattern>
  </servlet-mapping>
  <security-constraint>
  
    <web-resource-collection>
      <web-resource-name>patrol</web-resource-name>
      <url-pattern>/jsp/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>infractions</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <filter>
    <display-name>AuthorizedAccess</display-name>
    <filter-name>AuthorizedAccess</filter-name>
    <filter-class>karabelas.filter.AuthorizedAccess</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthorizedAccess</filter-name>
    <url-pattern>/jsp/patrol/*</url-pattern>
    <url-pattern>/jsp/admin/*</url-pattern>
  </filter-mapping>
   <filter>
    <display-name>AdminAccess</display-name>
    <filter-name>AdminAccess</filter-name>
    <filter-class>karabelas.filter.AdminAccess</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminAccess</filter-name>
     <url-pattern>/jsp/admin/*</url-pattern>
  </filter-mapping>
  
  		<!-- Declaration of the Struts 2 filter.  Since our entire web application will be a Struts 2
			 application, we will not have any other servlets or filters.  
		-->
					 
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
   </filter>
    
   <!-- The Struts 2 filter should be mapped to ALL requests coming into the web application. -->
				 
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
  
  <servlet>
    <description>Handles Requests to create accounts to access cool stuff</description>
    <display-name>AccountRequest</display-name>
    <servlet-name>AccountRequest</servlet-name>
    <servlet-class>karabelas.servlet.AccountRequest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AccountRequest</servlet-name>
    <url-pattern>/jsp/accountrequestform</url-pattern>
    <url-pattern>/jsp/accountrequestform.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>uploadservlet</display-name>
    <servlet-name>uploadservlet</servlet-name>
    <servlet-class>karabelas.servlet.uploadservlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadservlet</servlet-name>
    <url-pattern>/uploadServlet</url-pattern>
  </servlet-mapping>
</web-app>